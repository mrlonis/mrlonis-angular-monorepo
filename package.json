{
  "name": "mrlonis-angular-monorepo",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "analyze": "ng build --prod --stats-json && webpack-bundle-analyzer ./dist/demo-genshin-impact-angular/stats.json",
    "test": "ng test",
    "test:ci": "npm run test -- --watch=false --code-coverage --reporters progress,coverage,junit --browsers ChromeHeadless",
    "lint": "ng lint",
    "prettier": "prettier --config .prettierrc --write \"**/*.{ts,js,css,scss,html,json,md}\"",
    "prepare": "husky install",
    "gauntlet": "npm run-script prettier && npm run-script build -- --project ui-genshin-impact && npm run-script test:ci -- --project ui-genshin-impact && npm run-script build -- --project ui-mythic-heroes && npm run-script test:ci -- --project ui-mythic-heroes && npm run-script lint -- --fix"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.2.0",
    "@angular/cdk": "^14.2.1",
    "@angular/common": "^14.2.0",
    "@angular/compiler": "^14.2.0",
    "@angular/core": "^14.2.0",
    "@angular/forms": "^14.2.0",
    "@angular/material": "^14.2.1",
    "@angular/platform-browser": "^14.2.0",
    "@angular/platform-browser-dynamic": "^14.2.0",
    "@angular/router": "^14.2.0",
    "rxjs": "^7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.2.1",
    "@angular-eslint/builder": "^14.0.4",
    "@angular-eslint/eslint-plugin": "^14.0.4",
    "@angular-eslint/eslint-plugin-template": "^14.0.4",
    "@angular-eslint/schematics": "^14.0.4",
    "@angular-eslint/template-parser": "^14.0.4",
    "@angular/cli": "^14.2.2",
    "@angular/compiler-cli": "^14.2.0",
    "@types/jasmine": "^4.0.0",
    "@types/node": "^16.11.56",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-deprecation": "^1.3.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.6",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jasmine-core": "^4.4.0",
    "karma": "^6.4.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-coverage": "^2.2.0",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.0.0",
    "karma-junit-reporter": "^2.0.1",
    "lint-staged": "^13.0.3",
    "ng-lint-staged": "^12.0.4",
    "prettier": "^2.7.1",
    "puppeteer": "^17.1.0",
    "typescript": "~4.8.2",
    "webpack-bundle-analyzer": "^4.6.1"
  },
  "lint-staged": {
    "*.{js,scss,css,md,json}": [
      "prettier --write"
    ],
    "src/**/*.{html,ts}": [
      "prettier --write",
      "ng-lint-staged lint --fix --"
    ]
  }
}
